@model Product

<div class="bg bg-primary p-3 mt-5 border border-warning rounded ">
    <h2 class="text-warning">Update: @Model.Name</h2>

    @using (Html.BeginForm("UpdateProductToDatabase", "Product", "Post"))
    {
        <input asp-for="ProductID" type="hidden" value="@Model.ProductID" />

        <label asp-for="Name" class="control-label">Name</label>
        <input type="text" name="Name" class="form-control form-control mb-2" value="@Model.Name" />

        <label asp-for="Price" class="control-label">Price</label>
        <input type="number" step="0.01" name="Price" class="form-control mb-2" value="@Model.Price" />

        <label asp-for="CategoryID" class="control-label">Category Id:</label>
        <select type="number" name="CategoryID" class="form-control form-select mb-2" value="@Model.CategoryID">
            <option value="1">Computers</option>
            <option value="2">Appliances</option>
            <option value="3">Phones</option>
            <option value="4">Audo</option>
            <option value="5">Printers</option>
            <option value="6">Home Theater</option>
            <option value="7">Music</option>
            <option value="8">Games</option>
            <option value="9">Services</option>
            <option value="10">Other</option>
        </select>

        <label asp-for="OnSale" class="control-label">Is the Product on Sale?:</label>
        <select type="number" name="OnSale" class="form-control form-select mb-2" value="@Model.OnSale">
            <option value="0">No</option>
            <option value="1">Yes</option>


        </select>

        <label asp-for="StockLevel" class="control-label">Stock Level</label>
        <input type="number" name="StockLevel" class="form-control mb-2" value="@Model.StockLevel" />

        <div style="display: block">
            <a href="/Product/Index" class="btn btn-info mt-1">Go Back</a>

            <input type="submit" value="Update Product" class="btn btn-warning mt-1" />
        </div>



    }

</div>
