
@model Product
<div class="bg bg-primary p-3 mt-5 border border-warning rounded ">
    <h2 class="text-warning">Create a New Product</h2>

    @using (Html.BeginForm("InsertProductToDatabase", "Product", "Post"))
    {
        <input asp-for="ProductID" type="hidden" value="" />

        <label asp-for="Name" class="control-label">Name</label>
        <input type="text" name="Name" class="form-control mb-2" value="" />

        <label asp-for="Price" class="control-label">Price</label>
        <input type="number" step="0.01" name="Price" class="form-control mb-2" />

        <div class="form-group">
            <label for="">Select a Category</label>
            <select class="form-control mb-2" name="CategoryID" value="">
                @foreach (var cat in Model.Categories)
                {
                    <option value="@cat.CategoryID">@cat.Name</option>
                }
            </select>

            <label asp-for="OnSale" class="control-label">Is the Product on Sale?:</label>
            <select type="number" name="OnSale" class="form-control form-select mb-2" value="@Model.OnSale">
                <option value="0">No</option>
                <option value="1">Yes</option>

            </select>

            <label asp-for="StockLevel" class="control-label">Stock Level</label>
            <input type="number" name="StockLevel" class="form-control mb-2" value="@Model.StockLevel" />
        </div>
        <div style="display: block">
            <a href="/Product/Index" class="btn btn-info mt-1">Go Back</a>
            <input type="submit" value="Create Product" class="btn btn-warning mt-1" />
        </div>
    }

</div>