<!--Model Data that is Being Passed Into the View -->
<!-- This is the Products View -->
@model IEnumerable<Product>

    <div class="bg bg-primary p-3 mt-5 border border-warning rounded ">
        <h2>Database Products</h2>
        <hr />
        <div style="display: block">
            <a href="/Product/InsertProduct/" class="btn btn-warning">Create a New Product</a>
        </div>
        <hr />
        <table class="d-inline-block table table-primary text-center">
            <tr scope="row">
                <th>Product Id</th>
                <th class="col-md-3">Product Name</th>
                <th>Price</th>
                <th>Category ID</th>
                <th>On Sale</th>
                <th>Stock Level</th>
            </tr>


            @foreach (var product in Model)
            {
                <tr>
                    <td><a href=/Product/ViewProduct/@product.ProductID class="btn btn-warning">@product.ProductID</a></td>
                    <td>@product.Name</td>
                    <td>@product.Price</td>
                    <td>@product.CategoryID</td>
                    <td>@product.OnSale</td>
                    <td>@product.StockLevel</td>
                </tr>
            }
        </table>
        <hr />

    </div>
